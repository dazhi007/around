<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="44dp"
                  android:orientation="horizontal"
                  android:background="@drawable/bg_title_bar"
                  android:gravity="center_vertical" >
        <ImageButton android:id="@+id/Poiderailsback"
                     android:layout_width="40dp"
                     android:layout_height="wrap_content"
                     android:background="@drawable/bakbtn"
                     android:layout_marginLeft="5dp"
                     android:src="@drawable/ic_nav_back"
                ></ImageButton>
        <TextView android:id="@+id/title"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="详细信息"
                  android:textColor="#ffffff"
                  android:gravity="center_horizontal"
                  android:layout_weight="1"
                ></TextView>
        <ImageButton android:id="@+id/route"
                     android:layout_width="40dp"
                     android:layout_height="wrap_content"
                     android:background="@drawable/bakbtn"
                     android:layout_marginRight="5dp"
                     android:src="@drawable/ic_action_route"
                ></ImageButton>
    </LinearLayout>
<!--    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="44dp"
                  android:orientation="horizontal"
                  android:background="@drawable/bg_tab_top"
                  android:gravity="center_vertical" >-->
        <RadioGroup android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal"

                    android:gravity="center"
                    >
            <RadioButton android:id="foot"
                         android:layout_width="0dp"
                         android:layout_height="44dp"
                         android:layout_weight="1"
                         android:gravity="center"
                         android:background="@drawable/foot"
                         android:button="@null"
                         android:textColor="#000000"
                         android:textSize="14dp"></RadioButton>
            <RadioButton android:id="bus"

                         android:layout_width="0dp"
                         android:layout_height="44dp"
                         android:layout_weight="1"
                         android:gravity="center"
                         android:background="@drawable/bus"
                         android:button="@null"
                         android:textColor="#000000"
                         android:textSize="14dp"></RadioButton>
            <RadioButton android:id="car"
                         android:layout_width="0dp"
                         android:layout_height="44dp"
                         android:layout_weight="1"
                         android:gravity="center"
                         android:background="@drawable/car"
                         android:button="@null"
                         android:textColor="#000000"
                         android:textSize="14dp"></RadioButton>

        </RadioGroup>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="28dp"
                  android:orientation="horizontal"
                  android:background="#66666666"
                  android:gravity="center_horizontal" >


        <TextView android:id="@+id/address1"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="全程1.2公里，耗时20分钟"
                  android:textColor="#ffffff"
                  android:layout_weight="1"
                  android:gravity="left"
                  android:layout_margin="5dp"

                ></TextView>

    </LinearLayout>

    <com.baidu.mapapi.map.MapView android:id="@+id/bmapView"
                                  android:layout_width="fill_parent"
                                  android:layout_height="fill_parent"
                                  android:layout_weight="1"

            />
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:orientation="vertical"
                  android:background="#66666666"
                  android:gravity="center_vertical" >

        <TextView android:id="@+id/poiname"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="黄记煌三汁闷锅"
                  android:textColor="#ffffff"
                  android:gravity="left"
                  android:layout_marginLeft="5dp"
                ></TextView>
        <TextView android:id="@+id/poiaddress"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="西安市南大街52号"
                  android:textColor="#ffffff"
                  android:gravity="left"
                  android:layout_marginLeft="5dp"
                ></TextView>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="40dp"
                  android:orientation="horizontal"
                  android:background="@drawable/bg_tab_top"
                  android:gravity="center_vertical" >


        <ImageView android:id="@+id/location"
                   android:layout_width="wrap_content"
                   android:layout_height="15dp"
                   android:background="@drawable/ic_phone"
                   android:layout_marginLeft="5dp"

                ></ImageView>
        <TextView android:id="@+id/phone"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="暂无电话"
                  android:textColor="#000000"
                  android:layout_weight="1"
                  android:gravity="left"
                  android:layout_margin="5dp"
                ></TextView>

    </LinearLayout>



</LinearLayout>