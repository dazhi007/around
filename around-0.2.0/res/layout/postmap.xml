<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="44dp"
                  android:orientation="horizontal"
                  android:background="@drawable/bg_title_bar"
                  android:gravity="center_vertical" >
        <ImageButton android:id="@+id/return"
                     android:layout_width="40dp"
                     android:layout_height="wrap_content"
                     android:background="@drawable/bakbtn"
                     android:layout_marginLeft="5dp"
                     android:src="@drawable/ic_nav_back"
                ></ImageButton>
        <TextView android:id="@+id/title"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="四川菜(川菜)"
                  android:textColor="#ffffff"
                  android:gravity="center_horizontal"
                  android:layout_weight="1"
                ></TextView>
        <ImageView android:id="@+id/refresh"
                   android:layout_width="40dp"
                   android:layout_height="wrap_content"
                   android:background="@drawable/bakbtn"
                   android:src="@drawable/ic_refresh"></ImageView>
        <ImageView  android:id="@+id/list"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bakbtn"
                    android:src="@drawable/ic_action_list"></ImageView>


    </LinearLayout>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >




    </ListView>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="44dp"
                  android:orientation="vertical"
                  android:gravity="center_vertical" >
        <ImageButton android:id="@+id/spinner"
                     android:layout_width="match_parent"
                     android:layout_height="44dp"
                     android:background="@drawable/bg_tab_top"
                ></ImageButton>


    </LinearLayout>

</LinearLayout>